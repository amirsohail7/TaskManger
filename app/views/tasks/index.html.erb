<!-- app/views/tasks/index.html.erb -->

<div class="container mx-auto p-8">
  <h1 class="text-3xl font-semibold mb-8">All Tasks</h1>

  <div class="flex gap-3 flex-wrap">
    <%= render partial: 'task', collection: @tasks, as: :task %>
  </div>

  <div class="mt-8">
    <%= link_to new_task_path, class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' do %>
      New Task
    <% end %>
  </div>
</div>
